<% if (title) {%>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-box">
    <form action="/inv/delete-inventory" method="post">
        <label for="inv_make">Make:</label>
        <input readonly ="text" name="inv_make " id="inv_make" required value="<%= locals.inv_make %>">
        <label for="inv_make">Model:</label>
        <input readonly ="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>">
        <label for="inv_make">Year:</label>
        <input readonly ="integer" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>">

        <input type="hidden" name="inv_id" id="inv_id" value="<%= locals.inv_id %>">
        <p id="delete-confirmation">Confirm Deletion - The delete is permanent.</p>

        <button type="submit">Delete!</button>
    </form>
</div>