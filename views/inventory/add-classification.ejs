<% if (title) {%>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-box">
    <form action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name:</label>
        <span>NAME MUST BE ALPHABETIC CHARACTERS ONLY!</span>
        <input type="text" name="classification_name" id="classification_name" required value="<%= locals.classification_name%>">
        <button type="submit">Add Classification</button>
    </form>
</div>