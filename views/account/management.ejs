<% if (title) {%>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="account-management">
    <h2>Welcome <%= locals.account_firstname %></h2>
    <p>You are logged in.</p>
    <a href="/account/edit/<%= locals.account_id%>">Edit Account Information</a>

    <hr>
    
    <h2>Message Center</h2>
    <% if (messageList.length > 1) { %>
    <% let numbersOfRead = 0; %>
    <% messageList.forEach( message => { %>
            <% if (message.message_read == false) { %>
             <%   numbersOfRead++; %>
            <% } %>   
    <% }) %>

     <p>You have <%= numbersOfRead %> unread messages</p>
    <%} %>
   
  
    <a href="/message/inbox/<%= locals.account_id%>">Go to inbox </a>

    <% let role = locals.accountData.account_type %>
    <% if (role == "Admin" || role == "Employee") { %>
        <h2>Inventory Management</h2>
        <a href="/inv/">Manage Inventory</a>
    <% } %>

</div>
